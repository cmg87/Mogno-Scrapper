<!--//background image-->
<div class="bgimg"></div>
<div class="bgbox"></div>
<h3 class="welcome">Scrape, Save , Repeat<br> Your Favorite Articles From Forbes.com</h3>

<div class="push"></div>

<!--Start of Table for news-->
<table class="table">
    <thead class="thead-dark">

    <th class="text-center">Articles</th>
    <th class="text-center">Links</th>
    <th class="text-center">Save</th>
    <th class="text-center">Read</th>

    </thead>
    <tbody>
    {{#each data}}
        <tr>
            <td> {{this.title}}</td>
            <td><a href="{{this.link}}" target="_blank">{{this.link}}</a></td>
            <td>
                <button class="btn btn-danger save" data="{{this._id}}" data-state="true" data-target="#saver" data-toggle="modal">Save Article</button>
            </td>
            <td>
                <button class="btn btn-primary preview" data-target="#readsummary" data-toggle="modal"
                        data="{{this.link}}" data-title="{{this.title}}">Read
                </button>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>


<!-- Modal for read article-->
<div class="modal fade" id="readsummary" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-summary">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal For Scrape Complete-->
<div class="modal fade" id="complete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-summary">
                Scrape Complete
            </div>
            <div class="modal-footer">
                <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
            </div>
        </div>
    </div>
</div>


<!-- Modal For Saved Complete-->
<div class="modal fade" id="saver" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-summary">
                Article Saved!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

